<h1 class="title">ジャンル編集</h1>
<div class="container p-3">
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>
        <div class="form-group">
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit"変更を保存",class:"actions btn btn-success btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>