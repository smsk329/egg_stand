<h1 class="title">ジャンル一覧・追加</h1>

<div class="container p-3">
  <div class="row">
    <div class="col">

        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label "ジャンル名" %>
            <%= f.text_field :name, placeholder: "ジャンル名" %>
            <%= f.submit"新規登録",class:"actions btn btn-success btn-sm" %>
          </div>
        <% end %>

        <table>
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
           <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to edit_admin_genre_path(genre) do %>
                <span class="badge badge-pill badge-danger"><i class="fa-solid fa-pen-to-square"></i></span>
                <% end %>
              </td>
            </tr>
           <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>