<h1>マイページ</h1>
<div><%= image_tag @customer.get_customer_image(150,100) %></div>
<p><%= @customer.name %></p>
<p>ひとこと：<%= @customer.introduction %></p>
<%= link_to "編集", edit_customer_path(@customer.id) %>

<h3>投稿一覧</h3>
<!--余裕があったら部分テンプレート化。homes/topと同じ記述です-->
<% @shops.each do |shop| %>

  <%= link_to shop_path(shop.id) do %>
    <%= shop.title %>
  <% end %>
  <!--モーニングの提供開始と終了の時刻-->
  <p>OPEN <%= shop.open_time.strftime("%H:%M") %>〜CLOSE <%= shop.close_time.strftime("%H:%M") %></p>
  <p><%= shop.address %></p>
  <%= link_to shop_path(shop.id) do %>
    <div>
      <%= image_tag shop.get_shop_image(200,150) %>
    </div>
  <% end %>
  <p>価格帯：約<%= shop.price %>円／一人</p>
  <p><%= shop.customer.name %></p>
<% end %>
