<h1 class="title">ユーザー情報編集画面</h1>
<div class="container p-3">
  <div class="row">
    <div class="col">

      <!--エラーメッセージの部分テンプレート-->
        <%= render "layouts/errors", shop: @customer %>

        <%= form_with model: @customer, url: customer_path do |f| %>

          <div class="form-group">
            <%= f.label :customer_image,"ユーザー画像" %>
            <%= f.file_field :customer_image, accept: 'image/*' %>
          </div>

          <div class="form-group">
            <%= f.label :name,"アカウント名" %>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :introduction,"自己紹介" %>
            <%= f.text_area :introduction %>
          </div>

          <p><%= f.submit '編集内容を保存',class:"actions btn btn-success btn-sm" %></p>

        <% end %>
    </div>
  </div>
</div>