<% collection.each do |shop| %>
  <!--bootstrapのカード-->
  <div class="card shadow-sm" style="width: 270px; float: left; margin: 5px 5px 5px 0; padding: 15px;">

    <%= link_to shop_path(shop.id) do %>
      <strong style="color: #000; font-size: 18px;"><%= shop.title %></strong>
    <% end %>

    <!--モーニングの提供開始と終了の時刻-->
    <p style="font-size: 12px; margin-bottom: 0;">モーニング提供時間</p>
    <div>
      <i class="fa-regular fa-clock"></i>
      <%= shop.open_time.strftime("%H:%M") %>〜 <%= shop.close_time.strftime("%H:%M") %>
    </div>

    <%= link_to shop_path(shop.id) do %>
      <div class="shop" style="text-align:center;">
        <%= image_tag shop.get_shop_image(230,150) %>
      </div>
    <% end %>

    <p style="width: 230px; white-space: nowrap; text-overflow: ellipsis; overflow: hidden; margin-bottom: 0;">
      <i class="fa-solid fa-location-dot" style="color: #FF7504;"></i> <%= shop.address %>
    </p>

    <!--いいねボタンの部分テンプレート-->
    <div id="favorite_buttons_<%= shop.id %>">
      <%= render "public/favorites/favorites", shop: shop %>
    </div>

    <div style="text-align: right; color: #000; font-size: 14px;">
      投稿者：
      <%= link_to show_others_customer_path(shop.customer.id) do %>
        <span style="color: #000;"><%= shop.customer.name %></span>
      <% end %>
    </div>

  </div>
<% end %>